<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.compindia.viewpagerapp.ViewPagerActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
   <!-- <com.compindia.viewpagerapp.utils.ParallaxVeiwPager
        android:id="@+id/vp_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.compindia.viewpagerapp.utils.ParallaxVeiwPager>-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        >
    <LinearLayout
        android:id="@+id/ll_textviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_viewpager_10"
        android:layout_marginRight="@dimen/padding_viewpager_10"
        android:layout_marginBottom="@dimen/padding_viewpager_10"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_viewpager_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/tvColor"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/tv_viewpager_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/tvColor"
            android:textSize="12sp"

            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/tv_viewpager_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/tvColor"
            android:textSize="12sp"
            android:visibility="invisible"
            />

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_viewpager"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="bottom"
        android:alpha="0.5"
        android:background="@color/colorAccent"
        android:visibility="invisible"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="start"
            android:textColor="@color/tvColor"
            android:text="..."
            android:textSize="20sp"
            android:gravity="start"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_camera_viewpager_32"
            />
    </RelativeLayout>
    </LinearLayout>
</FrameLayout>
